/* pages/mess_detail/mess_detail.wxss */
.contents {
  width: 100%;
  padding: 28rpx 32rpx;
  box-sizing: border-box;
}

video {
  width: 100%;
  display: block;
}

.con_bott {
  width: 100%;
  height: 115rpx;
  background: rgba(239, 239, 239, 1);
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
}

.con_bott input {
  width: 560rpx;
  height: 67rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 4rpx;
  margin-left: 35rpx;
  padding: 0 0 0 47rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.con_bott button {
  width: 60rpx;
  height: 42rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(229, 0, 32, 1);
  margin-left: 38rpx;
  padding: 0;
  background: none;
  border: none;
  outline: none;
  /* line-height: 3; */
}

.xian {
  width: 100%;
  height: 22rpx;
  background: rgba(247, 247, 247, 1);
  margin-top: 49rpx;
}

.con_tit {
  width: 180rpx;
  height: 48rpx;
  background: rgba(229, 0, 32, 1);
  border-radius: 0px 100rpx 100rpx 0px;
  display: flex;
  align-items: center;
  padding: 0 26rpx 0 15rpx;
  box-sizing: border-box;
  margin-top: 49rpx;
}

.con_tit image {
  width: 27rpx;
  height: 27rpx;
}

.con_tit text {
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  margin-left: 6rpx;
}

.list_ul {
  width: 100%;
  padding: 0 34rpx;
  box-sizing: border-box;
  margin-bottom: 120rpx;
  display: flex;
  margin-top: 44rpx;
}

.list_ul .list_li {
  width: 185rpx;
  height: 55rpx;
  border-radius: 4rpx;
  border: 1px solid rgba(229, 0, 32, 1);
  text-align: center;
  line-height: 55rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(229, 0, 32, 1);
  margin-right: 34rpx;
  overflow: hidden;
}

.quse_list {
  width: 100%;
  padding: 0 32rpx;
  box-sizing: border-box;
  margin-bottom: 120rpx;
}

.quse_list .quse_li {
  width: 100%;
  border-bottom: 1px solid #E4E4E4;
  padding: 60rpx 0 35rpx 0;
  box-sizing: border-box;
}

.quse_list .quse_li .li_top {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.li_top>view {
  display: flex;
  align-items: center;
}

.li_top image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 8rpx;
}

.li_top>text {
  font-size: 30rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(24, 24, 24, 1);
}

.li_top>view text {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(106, 106, 106, 1);
}

.li_bott {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(106, 106, 106, 1);
  margin-top: 21rpx;
}
.image_list{
  width: 100%;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin-top: 60rpx;
}
.image_list image{
  width: 183rpx;
  height: 245rpx;
  margin-right: 45rpx;
  margin-bottom: 21rpx;
}
.image_list image:nth-of-type(3),.image_list image:nth-of-type(6),.image_list image:nth-of-type(9),.image_list image:nth-of-type(12){
  margin-right: 0;
}

.wxParse-p{
  width: 100%;

}
.wxParse-p image{
  width: 100%!important;
}